<div class="container-fluid table-container">

 {{> mod_googleactivity/show_activity_description }}

    <table class = "mod-googleactivity-files-view  table-bordered table-lg overviewTable table table-hover"
        data-googleactivity-id = "{{googleactivityid}}"  data-instance-id = "{{instanceid}}"
        data-from-existing = "{{from_existing}}" data-owner-email = "{{owneremail}}"
        data-all-groups="{{all_groups}}" data-file-name="{{docname}}">
        <input type ='hidden' id = 'simulation' </input>
        <thead>
            <tr>
                <th class ="table-student-columns">{{#str}} fullnameheader, mod_googleactivity{{/str}}</th>
                <th class ="table-student-columns">{{#str}} linkheader, mod_googleactivity{{/str}}</th>
                <th class ="table-student-columns">{{#str}} studentaccessheader, mod_googleactivity{{/str}}</th>
                <th class ="table-student-columns">{{#str}} statusheader, mod_googleactivity{{/str}}</th>
                {{#canbegraded}}
                    <th class ="table-student-columns">{{#str}} gradeheader, mod_googleactivity{{/str}}</th>
                {{/canbegraded}}
            </tr>
        </thead>

        <tbody id = 'table-body' class = "table-striped">
            {{#students}}
                <tr data-student-id ="{{student-id}}" data-student-email="{{student-email}}" student-name="{{fullname}}"
                    student-group-id ="{{student-groupid}}">
                    <td  class="fullname-column">{{{picture}}}</td>
                    <td>{{{link}}}</td>
                    <td>{{{access}}} </td>
                    <td>{{{status}}} </td>
                    {{#canbegraded}}
                        {{^beengraded}}
                            <td>
                                <a href= "{{{gradeurl}}}" class="btn btn-primary btn-grade" role = "button">{{#str}} gradeheader, mod_googleactivity{{/str}}</a>
                            </td>
                       {{/beengraded}}
                       {{#beengraded}}
                        <td>
                            <a href= "{{{gradeurl}}}" class="" role = "button">{{gradevalue}}</a>
                        </td>
                       {{/beengraded}}
                    {{/canbegraded}}
            {{/students}}
        </tbody>
    </table>
</div>